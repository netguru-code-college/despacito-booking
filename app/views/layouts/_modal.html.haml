/ Modal
#exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title Log in
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
      = form_for(User.new, as: :user, url: session_path(:user)) do |f|
        .modal-body
          .field.form-group
            = f.label :email
            %br/
            = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email"
          .field.form-group
            = f.label :password
            %br/
            = f.password_field :password, class: 'form-control', autocomplete: "off"

        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", type: "button"} Close
          = f.submit "Log in", class: 'btn btn-primary'
